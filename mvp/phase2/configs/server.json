{
  "server": {
    "port": 3000,
    "host": "localhost",
    "timeout": 30000,
    "maxRequestSize": "10mb"
  },
  "middleware": {
    "cors": {
      "origin": "*",
      "credentials": true
    },
    "helmet": {
      "contentSecurityPolicy": false
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 100,
      "message": "Too many requests from this IP"
    }
  },
  "handlers": {
    "timeout": 30000,
    "retryCount": 3,
    "backoffStrategy": "exponential"
  },
  "services": {
    "ai": {
      "provider": "openai",
      "model": "gpt-4",
      "fallback": "gpt-3.5-turbo",
      "maxTokens": 2000,
      "temperature": 0.7
    },
    "storage": {
      "provider": "sqlite",
      "backup": "s3",
      "encryption": true
    },
    "notification": {
      "providers": ["email", "slack", "webhook"],
      "retry": true,
      "timeout": 10000
    }
  }
}
